{
  "private": true,
  "scripts": {
    "clean": "rimraf output && rimraf .pulp-cache",
    "build": "pulp build -- --censor-lib --strict",
    "test": "pulp build -I test -- --censor-lib --strict",
    "example-ace": "pulp browserify --main Example.Ace.Main --include examples/ace/src --optimise --to examples/ace/dist/example.js",
    "example-basic": "pulp build --main Example.Basic.Main --include examples/basic/src --to examples/basic/dist/example.js",
    "example-components": "pulp build --main Example.Components.Main --include examples/components/src --to examples/components/dist/example.js",
    "example-components-inputs": "pulp build --main Example.Components.Inputs.Main --include examples/components-inputs/src --to examples/components-inputs/dist/example.js",
    "example-components-multitype": "pulp build --main Example.Components.Multitype.Main --include examples/components-multitype/src --to examples/components-multitype/dist/example.js",
    "example-driver-io": "pulp build --main Example.Driver.IO.Main --include examples/driver-io/src --to examples/driver-io/dist/example.js",
    "example-driver-routing": "pulp build --main Example.Driver.Routing.Main --include examples/driver-routing/src --to examples/driver-routing/dist/example.js",
    "example-driver-websockets": "pulp build --main Example.Driver.Websockets.Main --include examples/driver-websockets/src --to examples/driver-websockets/dist/example.js",
    "example-effects-aff-ajax": "pulp build --main Example.Effects.Aff.Ajax.Main --include examples/effects-aff-ajax/src --to examples/effects-aff-ajax/dist/example.js",
    "example-effects-eff-random": "pulp build --main Example.Effects.Eff.Random.Main --include examples/effects-eff-random/src --to examples/effects-eff-random/dist/example.js",
    "example-higher-order-components": "pulp build --main Example.HOC.Main --include examples/higher-order-components/src --to examples/higher-order-components/dist/example.js",
    "example-interpret": "pulp build --main Example.Interpret.Main --include examples/interpret/src --to examples/interpret/dist/example.js",
    "example-keyboard-input": "pulp build --main Example.KeyboardInput.Main --include examples/keyboard-input/src --to examples/keyboard-input/dist/example.js",
    "example-lifecycle": "pulp build --main Example.Lifecycle.Main --include examples/lifecycle/src --to examples/lifecycle/dist/example.js"
  },
  "devDependencies": {
    "pulp": "^13.0.0",
    "purescript": "^0.13.0",
    "purescript-psa": "^0.7.3",
    "rimraf": "^2.6.3"
  }
}
